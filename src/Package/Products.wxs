<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <?include .\Variables.wxi ?>

  <!-- Windows Installer package -->
  <Package Language="1036" Name="$(var.ProductName)" Version="$(var.ProductVersion)" Manufacturer="$(var.Manufacturer)" UpgradeCode="$(var.ProductUpgradeCode)" InstallerVersion="500">

    <Feature Id="ProductFeature" Title="WiX_CA_Test" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>

  </Package>

  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="APPLICATIONFOLDER">
      <Component Id="ProductComponent">
        <File Source="$(var.ProjectDir)\README.md" />
      </Component>
    </ComponentGroup>
  </Fragment>

</Wix>
